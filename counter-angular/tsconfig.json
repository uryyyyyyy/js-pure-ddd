{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals" : true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["dom", "ES2017"],
    "module": "ES2015",
    "target": "es5"
  }
}